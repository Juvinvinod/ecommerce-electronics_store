<%- include('./layout/header.ejs') %>
    <%- include('./layout/userNavbar.ejs') %>


        <div>
            <div class="container pt-5">
                <h3>Profile</h3>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="profile-container card">
                            <h4>General</h4>
                            <div class="profil-row">
                                <b>Name : </b><span>
                                    <%= user.name %>
                                </span>
                                <a href="/editProfile"><i class="fa fa-pencil"
                                        style="float: right;color: black;"></i></a>
                            </div>
                            <div class=" profil-row">
                                <b>Email : </b><span>
                                    <%= user.email %>
                                </span>
                            </div>
                            <div class="profil-row">
                                <b>Password : </b><span>
                                    <i class="fa fa-circle"></i>
                                    <i class="fa fa-circle"></i>
                                    <i class="fa fa-circle"></i>
                                    <i class="fa fa-circle"></i>
                                    <i class="fa fa-circle"></i>
                                    <i class="fa fa-circle"></i>
                                </span>
                            </div>
                            <div>
                                <a>
                                    <button onclick="window.location.href='/updatePassword'"
                                        class="btn loginButton">Change
                                        password</button>

                                </a>
                            </div>
                        </div>

                        <div class="porfile-items card mt-3">
                            <a href="#" class="profile-item cardBackground text-decoration-none">
                                <b class="d-flex align-items-center"> Wallet</b>
                                <b>â‚¹ </b>
                            </a>
                        </div>
                        <div class="porfile-items card mt-3">
                            <a href="/cart" class="profile-item cardBackground text-decoration-none">
                                <b>Cart</b>
                                <i class="fa fa-shopping-cart"></i>
                            </a>
                        </div>
                        <div class="porfile-items card mt-3">
                            <a href="/wishlist" class="profile-item cardBackground text-decoration-none">
                                <b>Wishlist</b>
                                <i class="fa fa-heart"></i>
                            </a>
                        </div>
                        <div class="porfile-items card mt-3">
                            <a href="/orders" class="profile-item cardBackground text-decoration-none">
                                <b>Order History</b>
                                <i class="fa fa-history"></i>
                            </a>
                        </div>
                        <div class="porfile-items card mt-3">
                            <a href="/coupons" class="profile-item cardBackground text-decoration-none">
                                <b>Coupons</b>
                                <i class="fa fa-ticket"></i>
                            </a>
                        </div>
                        <div class="row"></div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="manage-profile-address pt-3">
                            <div class="d-flex justify-content-between ">
                                <h4>Manage address </h4>
                                <a href="/addAddress?redirect=userProfile" class="btn loginButton ">Add</a>
                            </div>
                            <% if(address) { %>
                                <% address.forEach((object)=> { %>
                                    <div class="manage-address-row card">
                                        <div class="man-ad-left">
                                            <div class=" profil-row"
                                                style="display:flex; justify-content: space-between;">
                                                <div>
                                                    <b>
                                                        Building name:</b>
                                                    <%= object.building_name %> <span>
                                                </div>
                                                <div><a href="/editAddress/<%= object._id %>" style="color: black;"
                                                        class="delete"><i class="fa fa-trash mx-3 "></i></a><a
                                                        style="color: black;margin-left: 20px;"
                                                        href="/editAddress?id=<%= object._id %>"><i
                                                            class="fa fa-pencil"></i></a>
                                                </div>
                                                </span>
                                            </div>
                                            <div class=" profil-row">
                                                <b>
                                                    Street: </b><span>
                                                    <%= object.street %>
                                                </span>
                                            </div>
                                            <div class=" profil-row">
                                                <b>
                                                    City:</b> <span>
                                                    <%= object.city %>
                                                </span>
                                            </div>
                                            <div class=" profil-row">
                                                <b>
                                                    State: </b><span>
                                                    <%= object.state %>
                                                </span>
                                            </div>
                                            <div class=" profil-row">
                                                <b>
                                                    Number:</b> <span>
                                                    <%= object.phone_number %>
                                                </span>
                                            </div>
                                            <div class=" profil-row">
                                                <b>PIN: </b><span>
                                                    <%= object.pin_code %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./layout/userFooterbar.ejs') %>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script src="./js/sweetAlertDelete.js"></script>
            <%- include('./layout/footer.ejs') %>