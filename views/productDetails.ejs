                    <script src="/js/jquery.jqZoom.js"></script>
                    <script type="text/javascript">
                        // change image on click function
                        $(document).ready(function () {
                            $('.thumb a').click(function (e) {
                                e.preventDefault();
                                var src = $(this).find('img').attr('src');
                                $('.mainImage img').attr('src', src);
                            });
                        });
                    </script>

                    <!-- image zoom script -->
                    <script>
                        $(function () {
                            function enableZoom() {
                                $(".zoom-box img").jqZoom({
                                    selectorWidth: 200,
                                    selectorHeight: 200,
                                    viewerWidth: 300,
                                    viewerHeight: 400
                                });
                            }

                            function disableZoom() {
                                // Remove any initialized zoom instances
                                $(".zoom-box img").jqZoom("destroy");
                            }

                            // Check window width on page load
                            if ($(window).width() > 1399) {
                                enableZoom();
                            } else {
                                disableZoom();
                            }

                            // Check window width on window resize
                            $(window).resize(function () {
                                if ($(window).width() > 1399) {
                                    enableZoom();
                                } else {
                                    disableZoom();
                                }
                            });
                        });
                    </script>

                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                    <!-- script function to show added to cart message  -->
                    <script>
                        document.getElementById("addToCart").addEventListener("click", function (e) {
                            e.preventDefault();
                            const self = $(this);
                            Swal.fire({
                                title: 'Added',
                                text: " Added To Cart",
                                icon: 'success',
                                showConfirmButton: false,
                            })
                            setTimeout(() => {
                                location.href = self.attr('href');

                            }, 2000);
                        });
                    </script>

                    <!-- login required -->
                    <script>
                        document.getElementById("loginRequired").addEventListener("click", function (e) {
                            e.preventDefault();
                            const self = $(this);
                            Swal.fire({
                                title: 'Not Logged In',
                                text: "Please login to continue",
                                icon: 'error',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Log In'
                            }).then((result) => {
                                if (result.value) {
                                    location.href = self.attr('href');
                                }
                            })

                        });
                    </script>

