<%- include('./layout/header.ejs') %>
    <%- include('./layout/userNavbar.ejs') %>

        <div class="container-fluid d-flex flex-column justify-content-center align-items-center vh-100">
            <div class="col-md-10 col-lg-6 col-xl-5">
                <p class="text-center h1 fw-bold mb-5">RESET PASSWORD</p>
                <% if (flashes.error) { %>
                    <div class="container alert alert-danger alert-dismissible fade show" role="alert">
                        <%= flashes.error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>

                        <form class="mx-1 mx-md-4" action="/changePassword" method="POST">

                            <% if (flashes.errorObject && flashes.errorObject.find((err)=> err.path ===
                                'password')) { %>
                                <div class="container alert alert-danger alert-dismissible fade show" role="alert">
                                    <%= flashes.errorObject.find((err)=> err.path ===
                                        'password').msg %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                </div>
                                <% } %>

                                    <div class="form-group d-flex align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 pt-3 mt-3"></i>
                                        <div class="flex-fill">
                                            <label class="form-label" for="form3Example4c">New password</label>
                                            <input type="password" id="form3Example4c" class="form-control"
                                                name="password" required />
                                        </div>
                                    </div>

                                    <% if (flashes.errorObject && flashes.errorObject.find((err)=> err.path ===
                                        'passwordConfirm')) { %>
                                        <div class="container alert alert-danger alert-dismissible fade show"
                                            role="alert">
                                            <%= flashes.errorObject.find((err)=> err.path ===
                                                'passwordConfirm').msg %>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                    aria-label="Close"></button>
                                        </div>
                                        <% } %>


                                            <div class="form-group d-flex align-items-center mb-4">
                                                <i class="fas fa-key fa-lg me-3 pt-3 mt-3"></i>
                                                <div class="flex-fill">
                                                    <label class="form-label" for="form3Example4cd">Repeat your
                                                        password</label>
                                                    <input type="password" id="form3Example4cd" class="form-control"
                                                        name="passwordConfirm" required />
                                                </div>
                                            </div>

                                            <div class="text-center mt-4">
                                                <button type="submit" class="btn btn-lg loginButton">Confirm</button>
                                            </div>
                        </form>
            </div>
        </div>

        <%- include('./layout/userFooterbar.ejs') %>
            <%- include('./layout/footer.ejs') %>