<%- include('../layout/header.ejs') %>
    <%- include('../layout/adminNavbar.ejs') %>
        <div class="container d-flex justify-content-center align-items-center vh-100">
            <form action="adminLogin" method="POST" class=" formSize">
                <h1 class="text-center pb-3 fw-bold ">ADMIN LOGIN</h1>
                <% if (flashes.error) { %>
                    <div class="container alert alert-danger alert-dismissible fade show" role="alert">
                        <%= flashes.error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" name="email" required>
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" name="password"
                                required>
                        </div>
                        <div class="mb-3 form-check conatiner d-flex">
                            <input type="checkbox" class="form-check-input " id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Keep me logged in</label>
                            <a href="/forgotPassword" class="text-end ms-5 ps-5 link-underline-light ">Forgot
                                password?</a>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn loginButton">Submit</button>
                        </div>

            </form>
        </div>
        <%- include('../layout/footer.ejs') %>