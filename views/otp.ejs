<form method="POST" action="/otpVerify">
    <div class="container height-100 d-flex justify-content-center align-items-center">
        <div class="position-relative">
            <div class="card p-2 text-center">
                <h6>Please enter the one time password <br> to verify your account</h6>
                <div> <span>A code has been sent to your mail</div>
                <div id="otp" class="inputs d-flex flex-row justify-content-center mt-2"> <input
                        class="m-2 text-center form-control rounded" type="text" id="first" maxlength="1" name="otp1" />
                    <input class="m-2 text-center form-control rounded" type="text" id="second" maxlength="1"
                        name="otp2" /> <input class="m-2 text-center form-control rounded" type="text" id="third"
                        maxlength="1" name="otp3" /> <input class="m-2 text-center form-control rounded" type="text"
                        id="fourth" maxlength="1" name="otp4" />
                </div>
                <div class="mt-4"> <button class="btn btn-danger px-4 validate">Validate</button> </div>
            </div>
        </div>
    </div>
</form>
