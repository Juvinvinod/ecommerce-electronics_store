<%- include('./layout/header.ejs') %>
    <%- include('./layout/userNavbar.ejs') %>

        <div class="container d-flex justify-content-center align-items-center vh-100">
            <form action="/editProfile?id=<%= user.id %>" method="POST" class=" formSize">
                <h1 class="text-center pb-3 fw-bold ">EDIT PROFILE</h1>
                <% if (flashes.error) { %>
                    <div class="container alert alert-danger alert-dismissible fade show" role="alert">
                        <%= flashes.error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <div class="mb-3">
                            <label for="name" class="form-label">New user name</label>
                            <input type="text" class="form-control" aria-describedby="name" name="name" id="myButton"
                                value="<%= user.name %>" required>

                        </div>
                        <!-- <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" name="password"
                                placeholder="Enter current password" required>
                        </div> -->
                        <div class="text-center">
                            <button type="submit" class="btn loginButton">Update</button>
                        </div>
            </form>
        </div>


