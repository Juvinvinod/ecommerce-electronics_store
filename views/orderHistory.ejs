<%- include('./layout/header.ejs') %>
    <%- include('./layout/userNavbar.ejs') %>

        <div>
            <div class="container mt-3">
                <h3 class="wish-head">Order History <i class="fa fa-shopping-bag"></i></h3>
                <div class="row">

                    <div class="col-12">
                        <% orders.forEach((item)=>{ %>

                            <div class="wish-item">
                                <a href="/order/<%=item._id%>" class="order-img text-dark ps-2">
                                    <img src="img/orderHistory.png" alt="">
                                </a>
                                <a href="/order/<%=item._id%>" class="order-detail text-dark text-decoration-none">
                                    <div>
                                        <div class="d-flex">
                                            <b>
                                                ORDER ID:</b> &nbsp
                                            <%= item.order_id %>
                                        </div>
                                        <div class="d-flex pt-1">
                                            <b>
                                                ORDER DATE:</b>&nbsp
                                            <%= item.orderTime.toLocaleDateString() %>
                                        </div>
                                        <div class="d-flex pt-1">
                                            <b>
                                                TOTAL PRICE:</b>&nbsp
                                            â‚¹<%= item.total_amount %>
                                        </div>
                                        <div class="d-flex pt-1">
                                            <b>
                                                PAYMENT TYPE:</b>&nbsp
                                            <%= item.payment_method %>
                                        </div>
                                    </div>

                                    <div class="d-flex pt-1">
                                        <b>
                                            PRODUCTS:</b>&nbsp

                                        <% item.product.forEach((item1)=>{ %>

                                            <%= item1.product_id.product_name %>,
                                                <% })%>
                                    </div>
                                </a>


                                <div class="order-status d-flex">
                                    <div class="<%=item.status%>">
                                        <%=item.status %>
                                    </div>
                                    <!-- <button>Cancel</button> -->
                                </div>
                            </div>

                            <% }) %>
                    </div>

                </div>
                <% if(!orders[0]){ %>
                    <div class=" d-flex flex-column justify-content-center align-items-center" style="gap:10px">
                        <img src="/img/noOrders.png" style="width: 300px;" alt="">
                        <h3>No Orders found!</h3>
                        <p class="text-center">Looks like you haven't ordered anything yet</p>
                    </div>
                    <% } %>
            </div>
        </div>

        <%- include('./layout/userFooterbar.ejs') %>
            <%- include('./layout/footer.ejs') %>